{% extends 'base.html.twig' %}

{% block title %}Liste des categories{% endblock %}

{% block body %}
    <div class="d-flex flex-column justify-content-center">
        <div class="d-flex justify-content-center">
            <h1 class="m-5">La liste des catégories</h1>
            <a class="btn btn-success m-5 float-right" href="{{ path('category_new') }}">Ajouter une nouvelle</a>
        </div>

        <table class="table w-75 container">
            <thead class="thead-dark text-center">
                <tr>
                    <th scope="col" scope="row">Id</th>
                    <th scope="col">Category</th>
                    <th scope="col">actions</th>
                </tr>
            </thead>
            <tbody class="text-center">
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.category }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('category_show', {'id': category.id}) }}">Détail</a>
                        <a class="btn btn-secondary" href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
                        <div class="btn">{{ include('category/_delete_form.html.twig') }}</div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Pas de resultats trouvés</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
