{% extends 'base.html.twig' %}

{% block title %}Users index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center">
    <h1 class="m-5">La liste des utilisateurs</h1>
    <a class="btn btn-success m-5 float-right" href="{{ path('users_new') }}">Ajouter un nouveau</a>
    </div>

    <table class="table w-75">
        <thead class="thead-dark text-center">
            <tr>
                <th scope="col" scope="row">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Code</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody class="text-center">
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.code }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('users_show', {'id': user.id}) }}">Détail</a>
                    <a class="btn btn-secondary" href="{{ path('users_edit', {'id': user.id}) }}">Modifier</a>
                    <button class="btn btn-danger mr-5">Supprimer</button> 
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas de resultats trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
